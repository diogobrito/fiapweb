    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Program",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}/dist",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "port": 9222,
            "sourceMapPathOverrides": {
                "webpack:///./*":"${workspaceRoot}\\"
            } 
            
        }
    ]
}